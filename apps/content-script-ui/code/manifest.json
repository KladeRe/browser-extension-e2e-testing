{
  "manifest_version": 3,
  "name": "Content Script UI Extension",
  "description": "Chrome extension that injects UI elements into web pages via content scripts",
  "version": "0.0.1",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Content Script UI Extension"
  }
}
